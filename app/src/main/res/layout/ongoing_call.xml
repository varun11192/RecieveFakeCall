<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/belowbg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/incoming_caller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Caller Name"
        android:textColor="@color/white"
        android:textSize="48sp"
        />

    <TextView
        android:id="@+id/incoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/incoming_caller"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Incoming Call..."
        android:textColor="@color/white"
        android:textSize="24sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        >

        <ImageView
            android:id="@+id/answer_call"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/accept_call"
            android:layout_marginLeft="60dp"
            android:elevation="3dp"
            />

        <ImageView
            android:id="@+id/decline_call"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/end_call"
            android:layout_marginLeft="120dp"
            android:elevation="3dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>